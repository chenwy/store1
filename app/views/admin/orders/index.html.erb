<div class="row">
  <div class="col-md-12">
    <h2>所有订单</h2>
    <table class="table">
      <thead>
        <tr>
          <th width="80%">商品明细</th>
          <th>单价</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr class="table-striped  table-bordered">
          <td colspan="3">
            <%= order.created_at %> &nbsp;
            订单号:
            <%= order.id %> &nbsp;
            订单状态:
            <%= render_order_state(order) %> &nbsp;
            <%= link_to cancel_account_order_path(order), method: :post, style: "text-decoration: underline;", data: {confirm: "你确定要取消这个订单吗？"} do %> <i class="fa fa-trash"></i> <% end %>
            <% if order.aasm_state != "paid" %>
              <%= link_to("出货", shipping_admin_order_path(order), method: :post, style: "text-decoration: underline;", data: {confirm: "你确定要出货这个订单吗？"}) %>
            <% end %>
          </td>
        </tr>
        <% order.product_lists.each do |product_list| %>
        <tr class=" table-bordered">
          <td class=" table-bordered"><%= product_list.product_name %></td>
          <td class=" table-bordered"><%= product_list.product_price %></td>
          <td class=" table-bordered"><%= product_list.quantity %></td>
        </tr>
        <tr>
          <td>&nbsp;</td>
        </tr>
        <% end %>

        <% end %>
      </tbody>
    </table>
  </div>
</div>
